

const express = require('express');
const router = express.Router();
const userController = require('../controllers/usersController'); // Ensure this path is correct

// Define routes
router.get('/', userController.getAllUsers);
router.post('/api/users', userController.addUser);
router.put('/api/users/:id', userController.updateUser);
router.delete('/api/users/:id', userController.deleteUser);
router.put('/api/users/:id/activate', userController.activateUser);
router.put('/api/users/:id/deactivate', userController.deactivateUser);

module.exports = router;
